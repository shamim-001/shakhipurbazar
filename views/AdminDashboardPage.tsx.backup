            <div className="bg-white dark:bg-slate-800 rounded-lg p-6 w-full max-w-md">
                <h3 className="text-lg font-bold mb-4 text-gray-900 dark:text-white">Add Promotional Card</h3>
                <div className="space-y-4">
                    <div>
                        <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Title *</label>
                        <input
                            type="text"
                            value={newPromoCard.title}
                            onChange={(e) => setNewPromoCard({ ...newPromoCard, title: e.target.value })}
                            placeholder="e.g., Flat 10% Off"
                            className="w-full px-3 py-2 border rounded-lg dark:bg-slate-700 dark:border-slate-600 dark:text-white"
                        />
                    </div>
                    <div>
                        <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Image URL</label>
                        <input
                            type="url"
                            value={newPromoCard.image}
                            onChange={(e) => setNewPromoCard({ ...newPromoCard, image: e.target.value })}
                            placeholder="Leave empty for random placeholder"
                            className="w-full px-3 py-2 border rounded-lg dark:bg-slate-700 dark:border-slate-600 dark:text-white"
                        />
                    </div>
                    <div>
                        <label className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Background Color</label>
                        <input
                            type="color"
                            value={newPromoCard.bgColor}
                            onChange={(e) => setNewPromoCard({ ...newPromoCard, bgColor: e.target.value })}
                            className="w-full h-10 px-3 py-2 border rounded-lg dark:bg-slate-700 dark:border-slate-600"
                        />
                    </div>
                </div>
                <div className="flex gap-3 mt-6">
                    <button
                        onClick={() => setShowAddPromoModal(false)}
                        className="flex-1 px-4 py-2 bg-gray-200 dark:bg-slate-600 text-gray-900 dark:text-white rounded-lg hover:bg-gray-300"
                    >
                        Cancel
                    </button>
                    <button
                        onClick={handleAddPromoCard}
                        className="flex-1 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700"
                    >
                        Add Card
                    </button>
                </div>
            </div>
        </div>
    )
}
        </div >
    );
};


