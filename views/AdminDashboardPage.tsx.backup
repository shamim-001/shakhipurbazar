                                        <button onClick={() => handleRequestReview(product)} className="text-orange-600 hover:text-orange-900 font-medium">
                                            Review
                                        </button>
                                        <button onClick={() => handleReject(product)} className="text-red-600 hover:text-red-900 font-medium disabled:opacity-50" disabled={product.status === 'Rejected'}>
                                            Reject
