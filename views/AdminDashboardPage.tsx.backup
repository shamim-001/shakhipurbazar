const ProductsTab = () => {
    const { language, products, vendors, updateProduct } = useApp();
    const [filterStatus, setFilterStatus] = useState('All');
    const [filterType, setFilterType] = useState('All');
    const [currentPage, setCurrentPage] = useState(1);

    // Derived state - filter by both status AND type
    const filteredProducts = useMemo(() => {
        let filtered = products;

        // Filter by status
        if (filterStatus !== 'All') {
            filtered = filtered.filter(p => p.status === filterStatus);
        }

        // Filter by product type
        if (filterType !== 'All') {
            filtered = filtered.filter(p => (p.productType || 'new') === filterType);
        }

        return filtered;
    }, [products, filterStatus, filterType]);

    const itemsPerPage = 10;
    const totalPages = Math.ceil(filteredProducts.length / itemsPerPage);
    const paginatedProducts = filteredProducts.slice((currentPage - 1) * itemsPerPage, currentPage * itemsPerPage);

    const handleApprove = (product: any) => {
        if (confirm('Are you sure you want to approve this product?')) {
            updateProduct({ ...product, status: 'Approved' });
        }
    };

    const handleReject = (product: any) => {
        const reason = prompt('Please provide a reason for rejection:');
        if (reason) {
            updateProduct({ ...product, status: 'Rejected', rejectionReason: reason });
        }
    };

    const handleRequestReview = (product: any) => {
        const note = prompt('Please provide feedback for the vendor:');
        if (note) {
            updateProduct({ ...product, status: 'ReviewRequested', rejectionReason: note }); // Reusing rejectionReason for feedback
        }
    };

    return (
        <div className="p-6">
            <div className="flex flex-col gap-4 mb-6">
                <div className="flex justify-between items-center">
                    <h2 className="text-2xl font-bold text-gray-900 dark:text-white">
                        {language === 'en' ? 'Product Management' : 'পণ্য পরিচালনা'}
                    </h2>
                    <div className="flex gap-2">
                        {['All', 'Pending', 'Approved', 'Rejected', 'ReviewRequested'].map(status => (
                            <button
                                key={status}
                                onClick={() => { setFilterStatus(status); setCurrentPage(1); }}
                                className={`px-3 py-1 rounded text-sm font-medium ${filterStatus === status
                                    ? 'bg-indigo-600 text-white'
                                    : 'bg-gray-100 dark:bg-slate-700 text-gray-600 dark:text-gray-300 hover:bg-gray-200'
                                    }`}
                            >
                                {status}
                            </button>
                        ))}
                    </div>
                </div>

                {/* Product Type Filter */}
                <div className="flex items-center gap-2">
                    <span className="text-sm font-medium text-gray-700 dark:text-gray-300">Product Type:</span>
                    {['All', 'new', 'wholesale', 'resell'].map(type => (
                        <button
                            key={type}
                            onClick={() => { setFilterType(type); setCurrentPage(1); }}
                            className={`px-3 py-1 rounded text-sm font-medium ${filterType === type
                                ? 'bg-green-600 text-white'
                                : 'bg-gray-100 dark:bg-slate-700 text-gray-600 dark:text-gray-300 hover:bg-gray-200'
                                }`}
                        >
                            {type === 'new' ? 'New Products' : type === 'wholesale' ? 'Wholesale' : type === 'resell' ? 'Resell' : 'All Types'}
                        </button>
                    ))}
                </div>
            </div>

            <div className="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">
                <div className="bg-white dark:bg-slate-800 p-4 rounded-lg shadow">
                    <div className="text-2xl font-bold text-gray-800 dark:text-white">{products.length}</div>
                    <div className="text-sm text-gray-500 dark:text-gray-400">Total</div>
                </div>
                <div className="bg-white dark:bg-slate-800 p-4 rounded-lg shadow">
                    <div className="text-2xl font-bold text-yellow-600">{products.filter(p => p.status === 'Pending').length}</div>
                    <div className="text-sm text-gray-500 dark:text-gray-400">Pending</div>
                </div>
                <div className="bg-white dark:bg-slate-800 p-4 rounded-lg shadow">
                    <div className="text-2xl font-bold text-green-600">{products.filter(p => p.status === 'Approved').length}</div>
                    <div className="text-sm text-gray-500 dark:text-gray-400">Approved</div>
