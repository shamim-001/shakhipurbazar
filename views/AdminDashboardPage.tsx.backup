const CategoriesTab = () => {
    const { language, categoryCommissions, addCategoryCommission, updateCategory, deleteCategoryCommission, addSubCategory, updateSubCategory, deleteSubCategory } = useApp();
    const [editingCategory, setEditingCategory] = useState<any>(null);
    const [showAddModal, setShowAddModal] = useState(false);
    const [showEditModal, setShowEditModal] = useState(false);
    const [newCategory, setNewCategory] = useState({ en: '', bn: '', commissionRate: 10 });
    const [editFormData, setEditFormData] = useState({ en: '', bn: '', commissionRate: 10, originalEn: '' });

    const handleAdd = () => {
        if (!newCategory.en || !newCategory.bn) {
            alert('Please fill all fields');
            return;
        }
        const categoryCommission = {
            id: `CAT-${Date.now()}`,
            category: { en: newCategory.en, bn: newCategory.bn },
            commissionRate: newCategory.commissionRate,
            isActive: true,
            subCategories: []
        };
        addCategoryCommission(categoryCommission);
        setNewCategory({ en: '', bn: '', commissionRate: 10 });
        setShowAddModal(false);
    };

    const openEditModal = (cat: any) => {
        setEditFormData({
            en: cat.category.en,
            bn: cat.category.bn,
            commissionRate: cat.commissionRate,
            originalEn: cat.category.en
        });
        setEditingCategory(cat);
        setShowEditModal(true);
    };

    const handleSaveEdit = () => {
        if (!editFormData.en || !editFormData.bn) {
            alert('Please fill all fields');
            return;
        }
        updateCategory(editFormData.originalEn, {
            ...editingCategory,
            category: { en: editFormData.en, bn: editFormData.bn },
            commissionRate: editFormData.commissionRate
        });
        setShowEditModal(false);
        setEditingCategory(null);
    };

    const handleDelete = (cat: any) => {
        if (confirm(`Delete category "${cat.category.en}"?`)) {
            deleteCategoryCommission(cat.category.en);
        }
    };

    const handleAddSubCategory = (parentCatEn: string) => {
        const en = prompt('Subcategory name (English):');
        const bn = prompt('Subcategory name (Bengali):');
        if (en && bn) {
            addSubCategory(parentCatEn, { en, bn });
        }
    };

    const handleEditSubCategory = (parentCatEn: string, oldSubEn: string, currentSubBn: string) => {
        const en = prompt('Edit subcategory name (English):', oldSubEn);
        const bn = prompt('Edit subcategory name (Bengali):', currentSubBn);
        if (en && bn) {
            updateSubCategory(parentCatEn, oldSubEn, { en, bn });
        }
    };

    const handleDeleteSubCategory = (parentCatEn: string, subEn: string) => {
        if (confirm(`Delete subcategory "${subEn}"?`)) {
            deleteSubCategory(parentCatEn, subEn);
        }
    };

    return (
        <div className="p-6">
            <div className="flex justify-between items-center mb-6">
                <h2 className="text-2xl font-bold text-gray-900 dark:text-white">
                    {language === 'en' ? 'Category & Commission Management' : 'বিভাগ ও কমিশন পরিচালনা'}
                </h2>
                <button
                    onClick={() => setShowAddModal(true)}
                    className="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700"
                >
                    + Add Category
                </button>
            </div>

            <div className="bg-white dark:bg-slate-800 rounded-lg shadow overflow-hidden">
                <table className="w-full">
